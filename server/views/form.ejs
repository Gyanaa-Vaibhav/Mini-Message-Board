<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/index.css">
    <title>Submit a Message</title>
</head>
<body>


<% if (locals.errors) {%>
    <ul>
        <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
        <% }); %>
    </ul>
<% } %>

<div class="form-container">
    <h1>Post a Message</h1>
    <form action="/messages/new" method="POST">

        <div class="form-group">
            <label for="user">Username</label>
            <input id="user" name="user" placeholder="Enter your username" type="text" required>
        </div>

        <div class="form-group">
            <label for="text">Message</label>
            <textarea id="text" name="text" placeholder="Write your message" rows="4" required></textarea>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" name="password" placeholder="Write your Password" type="password" required>
        </div>

        <button type="submit">Submit</button>
    </form>
</div>
</body>
</html>
